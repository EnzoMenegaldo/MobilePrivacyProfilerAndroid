<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<fragment android:name="fr.inria.diverse.mobileprivacyprofiler.activities.AppStateFragment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/cgu_customview_app_state_fragment"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"/>

	<ScrollView
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="@drawable/border"
		android:layout_marginBottom="10dp"
		android:layout_marginEnd="50dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:fadeScrollbars="false">

		<TextView
			android:id="@+id/cgu_customview_cgu_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scrollbars="vertical"
			android:fadeScrollbars="false"
			android:paddingRight="10dp"
			android:paddingEnd="10dp" />

	</ScrollView>

	<fragment android:name="fr.inria.diverse.mobileprivacyprofiler.activities.LogoFragment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/logo_fragment" />

</LinearLayout>
