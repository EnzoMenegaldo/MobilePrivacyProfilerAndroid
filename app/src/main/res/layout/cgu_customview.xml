<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/home_customview_state_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/home_customview_txt_before_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="@string/home_customview_txt_before_app_state" />

		<TextView
			android:id="@+id/home_customview_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/home_customview_app_state_inactive"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/help_customview_state_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="0dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="0dp"
			android:text="@string/cgu_customview_title"
			android:textSize="40sp"
			android:textStyle="bold" />

		<ScrollView
			android:id="@+id/text_scrollview_cgu"
			android:layout_width="match_parent"
			android:layout_height="300dp"
			android:layout_weight="3"
			android:background="#efefef">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="50dp"
				android:text="@string/cgu_customview_text" />
		</ScrollView>

	</LinearLayout>


	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="61dp"
		android:layout_alignParentBottom="true"
		android:src="@drawable/logos_profilerxcf" />

</LinearLayout>
<!--End of user code
