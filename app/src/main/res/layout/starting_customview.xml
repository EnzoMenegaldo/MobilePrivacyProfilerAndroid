<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="20dp"
		android:text="@string/welcome_txt"
		android:textSize="40sp"
		android:textStyle="bold"
		android:layout_marginStart="20dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="50dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginStart="20dp"
		android:layout_marginTop="20dp"
		android:text="@string/intro_txt" />


	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginTop="20dp"
		android:text="@string/starting_customview_username_label"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="50dp" />

	<EditText
		android:id="@+id/starting_customview_username"
		android:layout_width="137dp"
		android:layout_height="wrap_content"
		android:background="@drawable/border"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="50dp"
		android:inputType="text" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginTop="10dp"
		android:text="@string/starting_customview_password_label"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="50dp" />

	<EditText
		android:id="@+id/starting_customview_password"
		android:layout_width="137dp"
		android:layout_height="wrap_content"
		android:background="@drawable/border"
		android:inputType="textPassword"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="50dp"
		android:layout_marginTop="5dp"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="50dp"/>


	<Button
		android:id="@+id/starting_customview_validate_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:onClick="onClickValidate"
		android:text="@string/starting_customview_validate_btn_text"
		android:layout_marginStart="20dp" />



	<ImageButton
		android:id="@+id/HelpImageButton"
		android:layout_width="75dp"
		android:layout_height="75dp"
		android:layout_marginBottom="10dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginTop="10dip"
		android:onClick="onClickHelpBtn"
		android:scaleType="centerCrop"
		app:srcCompat="@drawable/iconhelp" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:gravity="bottom"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/univ_rennes_2" />

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/universite_rennes_1" />

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/irisa" />
	</LinearLayout>

</LinearLayout>
<!--End of user code
-->
