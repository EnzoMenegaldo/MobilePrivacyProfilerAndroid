<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<fragment android:name="fr.inria.diverse.mobileprivacyprofiler.activities.AppStateFragment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/faq_customview_app_state_fragment"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"/>



	<ListView
		android:id="@+id/faq_customview_questions_list"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="20dp"
		android:layout_weight="1"
		android:divider="@null"
		android:dividerHeight="0dp"
		android:fadeScrollbars="false"/>



	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="61dp"
		android:src="@drawable/logos_profilerxcf" />

</LinearLayout>
