<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/home_customview_state_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/home_customview_txt_before_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="@string/home_customview_txt_before_app_state" />

		<TextView
			android:id="@+id/home_customview_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/home_customview_app_state_inactive"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/help_customview_state_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp"
			android:text="@string/help_customview_title"
			android:textSize="35sp"
			android:textStyle="bold" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginEnd="50dp"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="50dp"
			android:layout_marginStart="20dp"
			android:text="@string/help_customview_text" />
	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_gravity="center"
		android:layout_margin="10dp"
		android:orientation="vertical">

		<Button
			android:id="@+id/FAQbtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="onClickFAQBtn"
			android:text="@string/help_customview_faq_btn_label" />

		<Button
			android:id="@+id/Contactbtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="onClickContactBtn"
			android:text="@string/help_customview_contact_btn_label" />

		<Button
			android:id="@+id/CGUbtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="onClickCGUBtn"
			android:text="@string/help_customview_cgu_btn_label" />


	</LinearLayout>



	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="61dp"
		android:src="@drawable/logos_profilerxcf"
		android:contentDescription="TODO" />

</LinearLayout>
