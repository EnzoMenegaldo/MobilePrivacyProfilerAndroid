<!-- freely adapt here the desired layout for your custom view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">


	<LinearLayout
		android:id="@+id/home_customview_state_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/home_customview_txt_before_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="@string/home_customview_txt_before_app_state" />

		<TextView
			android:id="@+id/home_customview_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/home_customview_app_state_inactive"
			android:textStyle="bold" />
	</LinearLayout>


	<TextView
		android:id="@+id/home_customview_screen_explanation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="25dp"
		android:layout_marginTop="50dp"
		android:text="@string/home_customview_run_collection"
		android:gravity="center"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:layout_weight="1">

		<ToggleButton
			android:id="@+id/home_customview_toggle_collection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			style="@style/toggleButton"
			android:background="@drawable/ic_toggle_bg"/>

	</LinearLayout>


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="65dp"
		android:gravity="bottom"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/univ_rennes_2" />

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/universite_rennes_1" />

		<ImageView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="5dp"
			android:src="@drawable/irisa" />
	</LinearLayout>

</LinearLayout>
<!--End of user code
