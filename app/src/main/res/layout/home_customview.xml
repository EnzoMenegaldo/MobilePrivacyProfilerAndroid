<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">


	<fragment android:name="fr.inria.diverse.mobileprivacyprofiler.activities.AppStateFragment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/home_customview_app_state_fragment"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"/>


	<TextView
		android:id="@+id/home_customview_screen_explanation"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="25dp"
		android:layout_marginTop="50dp"
		android:text="@string/home_customview_run_collection"
		android:gravity="center"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_gravity="center"
		android:layout_weight="1">

		<ToggleButton
			android:id="@+id/home_customview_toggle_collection"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			style="@style/toggleButton"
			android:background="@drawable/ic_toggle_bg"/>

	</LinearLayout>


	<fragment android:name="fr.inria.diverse.mobileprivacyprofiler.activities.LogoFragment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/logo_fragment" />

</LinearLayout>
<!--End of user code
-->
