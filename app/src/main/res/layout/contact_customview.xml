<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/home_customview_state_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/home_customview_txt_before_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:text="@string/home_customview_txt_before_app_state" />

		<TextView
			android:id="@+id/home_customview_app_state"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/home_customview_app_state_inactive"
			android:textStyle="bold" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/contact_customview_state_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="0dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp"
			android:layout_marginTop="0dp"
			android:text="@string/contact_customview_title"
			android:textSize="35sp"
			android:textStyle="bold" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp"
			android:text="@string/contact_customview_title_comment"
			/>

		<ScrollView
			android:id="@+id/text_scrollview_contact"
			android:layout_width="match_parent"
			android:layout_height="275dp"
			android:layout_weight="3"
			android:background="#ffffff">




		<EditText
			android:id="@+id/sendMailInput"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="20dp"
			android:layout_marginRight="50dp"
			android:inputType="textMultiLine"
			android:ems="10"
			android:enabled="true"
			android:minLines="6"
			android:maxLines="30"
			android:isScrollContainer="true"
			android:hint="@string/contact_customview_send_mail_hint"
			android:background="#ffffff"
			android:textIsSelectable="true"
			android:focusable="true"

			/>
	</ScrollView>
		<Button
			android:id="@+id/sendMailBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="onClickSendMailBtn"
			android:text="@string/contact_customview_send_mail_btn_label" />
	</LinearLayout>


	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="61dp"
		android:src="@drawable/logos_profilerxcf" />

</LinearLayout>
<!--End of user code
-->
